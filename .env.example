# Django Settings
SECRET_KEY=your-secret-key-here-minimum-50-characters-long-generate-secure-one
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# Redis Configuration (for rate limiting)
REDIS_URL=redis://localhost:6379/0

# Security Settings
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
DJANGO_ENV=development

# Optional Security Configuration
SECURITY_RISK_PROFILE=moderate  # Options: strict, moderate, relaxed
ENABLE_SECURITY_HEADERS=True
ENABLE_RATE_LIMITING=True
ENABLE_REQUEST_SIZE_LIMIT=True
ENABLE_SUSPICIOUS_PATTERNS=True

# Django Crypto Fields Configuration
# IMPORTANT: In production, set this to a secure location OUTSIDE the project directory
# Example for production: /var/lib/myapp/crypto_keys
# The directory will be created automatically with secure permissions (0o700)
DJANGO_CRYPTO_FIELDS_KEY_PATH=/tmp/crypto_keys